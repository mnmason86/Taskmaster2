<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:outlineProvider="none"
    android:overScrollMode="never"
    tools:context=".activities.TaskDetailActivity">

    <TextView
        android:id="@+id/taskDetailTitleTextView"
        android:layout_width="111dp"
        android:layout_height="25dp"
        android:layout_marginTop="100dp"
        android:text="Task Details"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/taskDetailBodyPlainText"
        android:layout_width="246dp"
        android:layout_height="41dp"
        android:layout_marginTop="92dp"
        android:text="Task Body"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taskDetailTitleTextView" />

    <TextView
        android:id="@+id/taskDetailStateTextView"
        android:layout_width="124dp"
        android:layout_height="26dp"
        android:layout_marginTop="99dp"
        android:text="Task State"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taskDetailBodyPlainText" />
</androidx.constraintlayout.widget.ConstraintLayout>