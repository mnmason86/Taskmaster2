<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:outlineProvider="paddedBounds"
    android:overScrollMode="ifContentScrolls"
    android:paddingStart="@dimen/material_emphasis_medium"
    android:paddingLeft="@dimen/material_emphasis_medium"
    android:paddingTop="@dimen/material_emphasis_medium"
    android:paddingEnd="@dimen/material_emphasis_medium"
    android:paddingRight="@dimen/material_emphasis_medium"
    android:paddingBottom="@dimen/material_emphasis_medium"
    tools:context=".TaskDetailActivity">

    <TextView
        android:id="@+id/taskDetailTitleTextView"
        android:layout_width="111dp"
        android:layout_height="25dp"
        android:layout_marginTop="100dp"
        android:text="Task Details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/taskDetailDescriptionTextView"
        android:layout_width="238dp"
        android:layout_height="268dp"
        android:layout_marginTop="100dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taskDetailTitleTextView"
        tools:text="@tools:sample/lorem/random" />
</androidx.constraintlayout.widget.ConstraintLayout>